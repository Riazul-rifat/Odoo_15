<?xml version="1.0" encoding="utf-8"?>
<odoo>
                                <!-- Server action to send email -->
        <record id="action_send_email" model="ir.actions.server">
            <field name="name">Send Email</field>
            <field name="model_id" ref="model_purchase_order"/>
            <field name="binding_model_id" ref="model_purchase_order"/>
            <field name="state">email</field>
            <field name="template_id" ref="purchase_email_template"/>
        </record>

                                   <!--    Kanban view    -->

    <record id="view_PO_Requisition_kanban" model="ir.ui.view">
        <field name="name">custom.purchase.requisition.view</field>
        <field name="model">custom.purchase.requisition</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="warehouse_id"/>
                <field name="partner_id"/>
                <field name="delivery_date"/>
                <field name="state"/>

                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_global_click">
                                <ul>
                                    <li>
                                        Name -- <field name="name"/>
                                    </li>
                                    <li>
                                        Warehouse -- <field name="warehouse_id"/>
                                    </li>
                                    <li>
                                        Company -- <field name="partner_id"/>
                                    </li>
                                    <li>
                                        Delivery date --  <field name="delivery_date"/>
                                    </li>
                                    <li>
                                        Status -- <field name="state"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

                           <!--           Tree view              -->
        <record id="view_PO_Requisition_tree" model="ir.ui.view">
        <field name="name">custom.purchase.requisition.tree</field>
        <field name="model">custom.purchase.requisition</field>
        <field name="arch" type="xml">
            <tree>
<!--                    <field name="product_id"/>-->
                    <field name="name"/>
                    <field name="warehouse_id"/>
                    <field name="partner_id"/>
                    <field name="delivery_date"/>
                    <field name="state"/>

            </tree>
        </field>
        </record>
                                <!--    Form view -->
    <record id="view_PO_Requisition_form" model="ir.ui.view">
        <field name="name">custom.purchase.requisition.form</field>
        <field name="model">custom.purchase.requisition</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" nolabel="1" options="{'clickable' : '1'}" statusbar_visible="draft, approve"/>
                     <button name='approval' string='Approve' type='object' class="oe_highlight" states="draft"/>
                    <button name='action_email' string='Send Email' type='object' class="oe_highlight"/>

                </header>
                <sheet>
                    <group>

                            <group>
                                <field name="name" readonly="1"/>
                                <field name="warehouse_id"/>
                                <field name="delivery_date" />
                                <field name="partner_id" />
                                <field name="po_reference"  readonly="1"/>
                            </group>
                    </group>

                    <notebook>

                            <page string="Products">
                                <field name="requisition_orders">
                                    <tree string="Purchase Orders" editable="bottom">

                                            <field name="product_id" force_save="1"/>
                                            <field name="product_quantity"/>
                                            <field name="product_uom" force_save="1"/>

                                    </tree>
                                </field>
                            </page>

                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

                                                <!--    Menu action  -->
    <record id="action_custom_requisition" model="ir.actions.act_window">
        <field name="name">PO REQUISITION</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">custom.purchase.requisition</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create -_--_-
            </p>
        </field>
    </record>

                          <!-- Menu -->

    <menuitem id="manu_create"
     name="Create "
     parent="menu_create_REQ"
     sequence="0"
    action="action_custom_requisition"/>

</odoo>