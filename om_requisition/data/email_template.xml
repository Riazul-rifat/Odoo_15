<?xml version="1.0" ?>
<odoo>

    <data >
        <record id="inherit_purchase_email_template" model="mail.template">
            <field name="name">PURCHASE EMAIL TEMPLATE</field>
            <field name="model_id" ref="om_requisition.model_custom_purchase_requisition"/>
            <field name="email_from">{{object.email_from}}</field>
            <field name="email_to">{{object.email_to}}</field>
            <field name="subject">POR (Ref {{object.name}})</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                       Everything is fine
                        <br /><br />
                        If you have queries feel free to ask.
                    </p>
                </div>
            </field>
        </record>
    </data>

</odoo>